n=int(input())
k=n-1
for i in range(n):
    for j in range(k):
        print(" ",end="")
    k=k-1
    for x in range(i+1):
        print(chr(65+x),end=" ")
    print()
    temp=65+x
count=temp+1
for i in range(n-2,-1,-1):
    
    for j in range(-2,k):
        print(" ",end="")
    k=k+1
    for x in range(i+1):
        print(chr(count),end=" ")
        count+=1
    print()
